# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# JWT Secret (generate a new one for production)
JWT_SECRET=your_random_secret_here

# Email Service
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Frontend URL (development: http://localhost:3000, production: https://yourdomain.com)
FRONTEND_URL=http://localhost:3000

# Admin Email
ADMIN_EMAIL=admin@yourdomain.com

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
ITCHIO_CLIENT_ID=your-itchio-client-id
ITCHIO_CLIENT_SECRET=not_needed_for_implicit_flow

# Twitch API (for live stream status - get from https://dev.twitch.tv/console/apps)
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret